### User Routes ###

# Get User Profile

GET {{baseUrl}}/users/profile
Authorization: Bearer {{authToken}}

###

# Update User Profile
PUT {{baseUrl}}/users/profile
Authorization: Bearer {{authToken}}
Content-Type: application/json

{
  "name": "John Updated",
  "phoneNumber": "+1234567890"
}

###

# Update User Location
PUT {{baseUrl}}/users/location
Authorization: Bearer {{authToken}}
Content-Type: application/json

{
  "lat": 40.7128,
  "lon": -74.0060
}

###

# Get User Ride History
GET {{baseUrl}}/users/ride-history
Authorization: Bearer {{authToken}}

###

# Toggle User Active Status
PUT {{baseUrl}}/users/toggle-active
Authorization: Bearer {{authToken}}

### Ride Routes ###

# Create a new ride request
POST {{baseUrl}}/rides
Authorization: Bearer {{authToken}}
Content-Type: application/json

{
  "pickupLocation": "123 Main St, City",
  "dropoffLocation": "456 Elm St, City"
}

###

# Get a specific ride
GET {{baseUrl}}/rides/1
Authorization: Bearer {{authToken}}

###

# Update ride status
PUT {{baseUrl}}/rides/1/status
Authorization: Bearer {{authToken}}
Content-Type: application/json

{
  "status": "accepted"
}

###

# Get nearby rides
GET {{baseUrl}}/rides/nearby?lat=40.7128&lon=-74.0060&radius=5
Authorization: Bearer {{authToken}}

###

# Get rider's active rides
GET {{baseUrl}}/rides/rider/active
Authorization: Bearer {{authToken}}

###

# Get driver's active rides
GET {{baseUrl}}/rides/driver/active
Authorization: Bearer {{authToken}}

